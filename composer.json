{
  "name": "phpsanitization/phpsanitization",
  "type": "library",
  "description": "Simple PHP Sanitization Class",
  "keywords": [
    "sanitization",
    "filter",
    "filtering",
    "php",
    "php7",
    "php-library",
    "sanitizer",
    "xss-filter",
    "sanitize",
    "php-sanitizer",
    "php-sanitizer-array",
    "php-sanitize",
    "php-sanitization"
  ],
  "homepage": "https://github.com/farisd3v/PhpSanitization",
  "license": "MIT",
  "authors": [
    {
      "name": "Faris AL-Otaibi",
      "email": "farisksa79@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-filter": "*"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "*",
    "ergebnis/license": "*",
    "ergebnis/php-cs-fixer-config": "*",
    "ergebnis/phpstan-rules": "*",
    "ergebnis/test-util": "*",
    "infection/infection": "*",
    "maglnet/composer-require-checker": "*",
    "ocramius/package-versions": "*",
    "phpstan/extension-installer": "*",
    "phpstan/phpstan": "*",
    "phpstan/phpstan-deprecation-rules": "*",
    "phpstan/phpstan-phpunit": "*",
    "phpstan/phpstan-strict-rules": "*",
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*"
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    }
  },
  "autoload": {
    "psr-4": {
      "PhpSanitization\\PhpSanitization\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpSanitization\\PhpSanitization\\Test\\": "test/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf"
  },
  "support": {
    "issues": "https://github.com/farisc0de/PhpSanitization/issues",
    "source": "https://github.com/farisc0de/PhpSanitization"
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "phpstan/extension-installer": true,
      "ergebnis/composer-normalize": true,
      "infection/extension-installer": true
    }
  }
}
